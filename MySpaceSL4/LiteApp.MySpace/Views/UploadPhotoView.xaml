<controls:ChildWindow x:Class="LiteApp.MySpace.Views.UploadPhotoView"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Style="{StaticResource DefaultWindowStyle}"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:cal="http://www.caliburnproject.org"
           KeyDown="UploadPhotoView_KeyDown"
           Width="500">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Upload to album" Style="{StaticResource BlackLabelTextStyle}"/>
            <TextBlock Text="Click 'Choose File' to choose and start upload your photo immediately." Style="{StaticResource BlackLabelTextStyle}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ChooseFileButton" Content="Choose File" Width="120" Height="30" Margin="0,0,10,0" Click="ChooseFileButton_Click" />
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="30" />
        </StackPanel>
    </Grid>
</controls:ChildWindow>