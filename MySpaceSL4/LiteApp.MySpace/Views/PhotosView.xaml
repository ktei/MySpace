<navigation:Page x:Class="LiteApp.MySpace.Views.PhotosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
    xmlns:converters="clr-namespace:LiteApp.MySpace.Converters"
    mc:Ignorable="d" Style="{StaticResource PageStyle}"
    d:DesignHeight="300" d:DesignWidth="400">
    <navigation:Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="boolToVis"/>
        <converters:BooleanToVisibilityConverter x:Key="boolToVisReverse" Reverse="True"/>
    </navigation:Page.Resources>
    
        <Grid>
        <ScrollViewer x:Name="PageScrollViewer" Style="{StaticResource PageScrollViewerStyle}">
            <StackPanel>
                <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Photos" />
                <StackPanel Orientation="Horizontal">
                    <Button Height="30" Content="Upload Photo" Width="150" HorizontalAlignment="Left" cal:Message.Attach="UploadPhoto"/>
                    <Button Height="30" Content="Create Album" Width="150" HorizontalAlignment="Left" Margin="10,0,0,0" cal:Message.Attach="CreateAlbum"/>
                </StackPanel>

                <StackPanel>
                    <ItemsControl ItemsSource="{Binding UploadItems, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,10,0,0" HorizontalAlignment="Left" Width="400">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Style="{StaticResource ContentTextStyle}" Text="{Binding FileName, Mode=OneWay}" TextTrimming="WordEllipsis"/>
                                    <HyperlinkButton Grid.Column="1" Content="Cancel" Visibility="{Binding CanCancel, Converter={StaticResource boolToVis}, Mode=OneWay}" cal:Message.Attach="CancelUpload"/>
                                    <TextBlock Style="{StaticResource ContentTextStyle}" Text="{Binding Status, Mode=OneWay}" Grid.Column="1" 
                                               Visibility="{Binding CanCancel, Converter={StaticResource boolToVisReverse}, Mode=OneWay}"/>
                                    <ProgressBar Value="{Binding Progress, Mode=OneWay}" Height="10" Maximum="1" Minimum="0" Grid.Row="1" Grid.ColumnSpan="2"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</navigation:Page>
